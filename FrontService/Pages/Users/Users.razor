@page "/admin/users"
@layout FrontService.Pages.Admin.Admin
@using MudBlazor

<MudText Typo="Typo.h5" Class="mb-4">Управление пользователями</MudText>

<MudTable Items="@users" Hover="true" Dense="true">

    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Имя</MudTh>
        <MudTh>Email</MudTh>
        <MudTh>Роль</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Имя">@context.Name</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="Роль">@context.Role</MudTd>
    </RowTemplate>

</MudTable>

@code {
    record User(int Id, string Name, string Email, string Role);

    List<User> users = new()
    {
        new User(1, "Иван", "ivan@example.com", "Admin"),
        new User(2, "Мария", "maria@example.com", "User"),
        new User(3, "Сергей", "serg@example.com", "User"),
        new User(4, "Ольга", "olga@example.com", "Moderator")
    };
}